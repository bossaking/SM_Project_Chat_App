    </RelativeLayout>


    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/greenButtonColor"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/little_margin"/>

</LinearLayout>